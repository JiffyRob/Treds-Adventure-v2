# define ansewrs as constants so you don't have to remember them
yes = "Sure am.";
no = "Am not!";
# tell player something, get a response
response = dialog("I have come to the conclusion that you are a VERY silly goober.", no, yes);
switch response {
    case no {
        dialog("Yeah, right.  So what are you?  A goofy goober?");
    }
    case yes {
        dialog("Alright.  I like an honest person, so I'll be honest too.  Your dad has a peanut allergy.");
    }
}