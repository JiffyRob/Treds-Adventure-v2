max_speed = 48;

while 1 {
    counter = 3;
    while counter {
        print("stop check");
        stopped = !direc(get_velocity(THIS));
        if stopped {
            veloc = randincircle(max_speed, 1);
            move(THIS, veloc);
        }
        counter = sub(counter, 1);
        wait(500);
    }
    print("flip");
    veloc = randincircle(max_speed, 1);
    move(THIS, veloc);
}